<Window x:Class="Lego_Set_Verwaltungssytem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lego_Set_Verwaltungssytem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation oben -->
        <Grid Background="Black" Height="50" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                <!-- Startsteite -->
                <Button Content="Home"
                     Foreground="White"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     Click="HomeButton_Click"/>

                <!-- Sammlung -->
                <Button Content="Sammlung"
                     Foreground="White"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     Click="SammlungButton_Click"/>

                <!-- LegoSetSuche -->
                <Button Content="LegoSet suchen"
                     Foreground="White"
                     Background="Black"
                     BorderThickness="0"
                     Click="NavigateAlbumSuche"/>
            </StackPanel>
        </Grid>

        <!-- Frame -->
        <Frame x:Name="MainFrame"
            Grid.Row="1"
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
