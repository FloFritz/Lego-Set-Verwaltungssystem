<Window x:Class="Lego_Set_Verwaltungssytem.Views.ApiKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lego_Set_Verwaltungssytem.Views"
        mc:Ignorable="d"
        Title="API-Key eingeben" Height="180" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Bitte gib deinen Rebrickable API-Key ein:" Margin="0 0 0 10"/>
            <TextBox x:Name="txtApiKey" Width="350"/>
        </StackPanel>

        <Button Content="Speichern" Grid.Row="1" HorizontalAlignment="Right" Width="100" Margin="20" Click="BtnSpeichern_Click"/>
    </Grid>
</Window>
